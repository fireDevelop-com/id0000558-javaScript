{
    "files.autoSave": "afterDelay",
    "window.zoomLevel": 0,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.suggestSmartCommit": false,
    "workbench.startupEditor": "welcomePage",
    "editor.largeFileOptimizations": false,
    "git.autofetch": true,

    "highlightwords.box": true,
    "highlightwords.colors": true,
    "editor.minimap.enabled": true,    
    "workbench.colorCustomizations": {
        //"editor.selectionBackground": "#3d832e",
        "editor.selectionHighlightBackground": "#eeff00"
    },

    "todohighlight.isEnable": false,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
            "class ",
            {
                //"text": "class",
                //"color": "#ff0000",
                //"backgroundColor": "#e8d49e",
               // "overviewRulerColor": "grey"
            },

        ],
        "todohighlight.keywordsPattern": "class ",
        "todohighlight.defaultStyle": {
           // "color": "red",
            "backgroundColor": "#575144",
            //"overviewRulerColor": "#ffab00",
            //"cursor": "pointer",
            //"border": "1px solid #eee",
            //"borderRadius": "2px",
            "isWholeLine": true,
            //other styling properties goes here ... 
        },
        "todohighlight.include": [
            "**/*.js",
            "**/*.jsx",
            "**/*.ts",
            "**/*.tsx",
            "**/*.html",
            "**/*.php",
            "**/*.css",
            "**/*.scss"
        ],
        "todohighlight.exclude": [
        "#ff0000"
        
            "**/node_modules/**",
            "**/bower_components/**",
            "**/dist/**",
            "**/build/**",
            "**/.vscode/**",
            "**/.github/**",
            "**/_output/**",
            "**/*.min.*",
            "**/*.map",
            "**/.next/**"
        ],
        "todohighlight.maxFilesForSearch": 5120,
        "todohighlight.toggleURI": false,
        "highlightSelections.borderColor": "#eeff00"
    }


    
    



